{
  "manifest_version": 3,
  "name": "Starter Extension",
  "description": "A minimal Chrome extension starter (MV3).",
  "version": "0.1.0",
  "action": {
    "default_title": "Starter Extension",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": [],
  "icons": {}
}
