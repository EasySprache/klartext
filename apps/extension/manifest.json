{
  "manifest_version": 3,
  "name": "KlarText - Easy Language",
  "description": "Transform complex text into easy-to-understand language. Makes websites more accessible for everyone.",
  "version": "0.1.0",
  "author": "KlarText Team",
  "action": {
    "default_title": "KlarText - Simplify page text"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "permissions": ["activeTab", "tabs", "scripting", "sidePanel", "storage"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content/styles.css", "config.js", "extension_logger.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
