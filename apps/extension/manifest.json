{
  "manifest_version": 3,
  "name": "KlarText - Easy Language",
  "description": "Transform complex text into easy-to-understand language. Makes websites more accessible for everyone.",
  "version": "0.1.0",
  "author": "KlarText Team",
  "action": {
    "default_title": "KlarText - Simplify page text",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content/styles.css", "config.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
